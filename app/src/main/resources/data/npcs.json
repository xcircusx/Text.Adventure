  "Müder Wächter": {
    "states": {
      "0": {
        "npc_text": "Hallo Fremder. Wie bist du hier reingekommen?",
        "trigger": [],
        "options": {
          "0": {
            "text": "Ich bin durch den Boden gestürzt und hier gelandet.",
            "conditions": [],
            "trigger": [],
            "conditionsTrue": "1",
            "conditionsFalse": ""
